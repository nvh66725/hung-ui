{
  "compilerOptions": {
    "target": "ES5",
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "importHelpers": true // Cấu hình này yêu cầu `tslib`
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
